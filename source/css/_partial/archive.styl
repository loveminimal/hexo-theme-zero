.archive
  {jk_border-style}

.post-archive
  padding 0
  margin 0 4%
  list-style-type none

.post-item
  background-color #ffffff
  border-bottom 3px solid #eeeeee
  border-radius 20px
  transition all 0.3s linear
  padding 0 1%
  &:hover
    transform scale(1.03)
    // margin-left 20px
  .post-date  
    color #999999
  &:last-child
    margin-bottom 2%

.post-title
  display inline-block
  width 75%
  padding 2.5%
  padding-left 5%
  text-decoration none
  color #333333
  font-size 1.3em
  margin-left 1%
  &:hover
    color #4169e1