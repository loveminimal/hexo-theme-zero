.header
  display: flex
  align-items: baseline
  justify-content: flex-start
  a
    text-decoration: none
    color: #800080

  .logo
    font-size: 2em

  .nav
    font-size: 1.2em
    .menu
      display: flex
      .menu-item
        list-style: none
        margin: 0 5%
        transition: all 0.3s linear
        &:hover
          transform: scale(1.2)
        .menu-item-link:hover
          color: #4169E1